{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyProxyApp",
  "version": "0.1.0",
  "identifier": "com.myproxy.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "My Proxy App",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default" 
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/singbox"
    ],
    "resources": [
      "resources/*"
    ],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "A simple proxy client using sing-box",
    "longDescription": ""
  }
}