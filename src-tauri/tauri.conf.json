{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Morph",
  "version": "0.1.12",
  "identifier": "com.morph.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Morph",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/singbox"],
    "resources": ["resources/*"],
    "copyright": "Â© 2026 Morph",
    "category": "Utility",
    "shortDescription": "A simple proxy client using sing-box",
    "longDescription": "Morph is a modern, lightweight proxy management tool built with Tauri and sing-box core.",
    "publisher": "Morph",
    "createUpdaterArtifacts": "v1Compatible",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": ["zh-CN"],
        "enableElevatedUpdateTask": true,
        "bannerPath": "icons/banner.bmp",
        "dialogImagePath": "icons/dialog.bmp",
        "upgradeCode": null,
        "componentRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "fragmentPaths": [],
        "template": null
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
       "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://github.com/Ordinary-bo/morph/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI3MDhFMThCQzJFRDVBODIKUldTQ1d1M0NpK0VJdDhVWHRQN2lwa1B6dUFKQ1NzMmNyTERMTkhMRzFKanZwSVdXZ29KOWlDckIK"
    }
  }
}
